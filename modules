include("third_party/extendj/modules")

module("simplecfg") {

	imports "java8 frontend"

	jastadd {
		basedir "src/main/jastadd/"
		include "**/*.ast"
		include "**/*.jadd"
		include "**/*.jrag"
	}

	java {
		basedir "src/main/java/"
		include "**/*.java"

		// Exclude ExtendJ main classes (we provide our own).
		exclude "third_party/extendj/frontend/org/jastadd/extendj/*"
		exclude "third_party/extendj/backend/org/jastadd/extendj/*"
		exclude "third_party/extendj/JavaCompiler.java"
	}

	parser {
		// Replace parser package declaration.
		include "src/main/parser/Header.parser", [-2]
		excludeFrom "java4 frontend", "parser/Header.parser"
	}
}

